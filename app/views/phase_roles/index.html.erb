<p id="notice"><%= notice %></p>

<h1>Phase Roles</h1>

<table>
  <thead>
    <tr>
      <th>Phase</th>
      <th>Role</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @phase_roles.each do |phase_role| %>
      <tr>
        <td><%= phase_role.phase %></td>
        <td><%= phase_role.role %></td>
        <td><%= link_to 'Show', phase_role %></td>
        <td><%= link_to 'Edit', edit_phase_role_path(phase_role) %></td>
        <td><%= link_to 'Destroy', phase_role, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

